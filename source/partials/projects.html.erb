<div id="projects">
  <h2 class="projects-letter"> Projects</h2>
  <div class="cards">
    <% data.projects.each do |project| %>
      <div class="project mb-5">
        <div class="project-image">
          <%= image_tag project.image, alt: "project image" %>
        </div>
        <div class="project-infos">
          <h2 class="project-url"><%= link_to project.name, project.url %></h2>
          <p><%= project.description %></p>
          <%= link_to "View GitHub Repo", project.gh_url, class: 'btn btn-outline-secondary', target: '_blank'  %>
        </div>
      </div>
    <% end %>
  </div>
</div>

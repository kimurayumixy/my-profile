<div class="row my-5">
  <div class="col-12">
    <div class="container">
      <div id="projects">
        <h2> Projects</h2>
        <div class="cards">
          <% data.projects.each do |project| %>
            <div class="project">
              <div class="project-image">
                <%= image_tag project.image, alt: "project image" %>
              </div>
              <div class="project-infos">
                <h2><%= link_to project.name, project.url %></h2>
                <p><%= project.description %></p>
                <% link_to project.gh_url, class: 'external-link', target: '_blank' do %>
                  <i class="fa-brands fa-square-github"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
